{
  "manifest_version": 2,
  "name": "Google Translate Launcher",
  "version": "1.0",
  "description": "Select text, click button, get translation. No bullshit.",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}